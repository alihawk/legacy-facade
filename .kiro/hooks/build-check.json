{
  "name": "build-check",
  "description": "Verify frontend and backend compile without errors",
  "enabled": true,
  "triggers": [
    {
      "type": "manual",
      "label": "üèóÔ∏è Build Check"
    }
  ],
  "actions": [
    {
      "type": "command",
      "cwd": "frontend",
      "command": "npm",
      "args": ["run", "build"],
      "description": "TypeScript compile + Vite build for frontend"
    },
    {
      "type": "command",
      "cwd": "backend",
      "command": "python",
      "args": ["-m", "py_compile", "app/main.py"],
      "description": "Verify backend Python syntax"
    }
  ]
}
